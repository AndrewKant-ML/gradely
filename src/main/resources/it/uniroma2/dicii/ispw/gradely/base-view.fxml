<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.shape.Circle?>
<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="it.uniroma2.dicii.ispw.gradely.BaseGraphicControl"
      stylesheets="@styles/base-style.css">

    <HBox styleClass="header" prefHeight="35" alignment="CENTER_LEFT">
        <padding>
            <Insets topRightBottomLeft="6"/>
        </padding>
        <Label text="gradely" styleClass="app-name"/>
        <Region HBox.hgrow="ALWAYS"/>
        <Button text="menu" styleClass="account-button">
            <shape>
                <Circle radius="12"/>
            </shape>
        </Button>
    </HBox>

    <AnchorPane fx:id="content" AnchorPane.bottomAnchor="0" VBox.vgrow="ALWAYS">
    </AnchorPane>
</VBox>
