                </padding>
                <VBox HBox.hgrow="ALWAYS" maxWidth="Infinity">
                    <Label text="Courses" AnchorPane.leftAnchor="0" AnchorPane.topAnchor="0" styleClass="card-title"/>
                    <Text text="Subscribe to single subject courses" wrappingWidth="140" AnchorPane.leftAnchor="0"
                          AnchorPane.bottomAnchor="0"
                          styleClass="card-description"/>
                </VBox>
                <Button HBox.hgrow="NEVER" maxWidth="Infinity" styleClass="card-button" onAction="#openCoursesPage">
