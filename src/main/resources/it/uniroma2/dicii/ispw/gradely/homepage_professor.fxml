                        <Circle radius="15"/>
                    </shape>
                    <graphic>
                        <ImageView preserveRatio="true">
                            <Image url="@images/right_arrow.png" requestedWidth="20" requestedHeight="20"/>
                        </ImageView>
                    </graphic>
                </Button>
            </HBox>
        </AnchorPane>

    </AnchorPane>

