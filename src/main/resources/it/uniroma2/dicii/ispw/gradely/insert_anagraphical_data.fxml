<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            prefWidth="650" prefHeight="400"
            stylesheets="@styles/default.css"
            fx:controller="it.uniroma2.dicii.ispw.gradely.use_cases.enroll_to_degree_course.ConfirmAnagraphicalData"
            styleClass="background">

    <VBox AnchorPane.topAnchor="30" AnchorPane.rightAnchor="30" AnchorPane.leftAnchor="30" spacing="10">
        <TextField fx:id="matricola" styleClass="text-field" VBox.vgrow="NEVER" editable="false"/>
        <TextField fx:id="name" styleClass="text-field" VBox.vgrow="NEVER" editable="false"/>
        <TextField fx:id="surname" styleClass="text-field" VBox.vgrow="NEVER" editable="false"/>
        <TextField fx:id="email" styleClass="text-field" VBox.vgrow="NEVER" editable="false"/>
        <TextField fx:id="codiceFiscale" styleClass="text-field" VBox.vgrow="NEVER" editable="false"/>
        <HBox>
            <Region HBox.hgrow="SOMETIMES"/>
            <Button text="Change data" styleClass="action-button" HBox.hgrow="NEVER"/>
            <Region HBox.hgrow="SOMETIMES"/>
        </HBox>
    </VBox>
</AnchorPane>
