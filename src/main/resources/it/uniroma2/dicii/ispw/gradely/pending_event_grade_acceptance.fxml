<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.*?>
<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            prefHeight="56" prefWidth="200.0"
            stylesheets="@styles/default.css">

    <padding>
        <Insets topRightBottomLeft="6"/>
    </padding>
    <VBox AnchorPane.topAnchor="0" AnchorPane.leftAnchor="0"
          AnchorPane.rightAnchor="0" AnchorPane.bottomAnchor="0">
        <Label fx:id="text" styleClass="text-field"/>
        <HBox>
            <Button fx:id="rejectButton" styleClass="second-action-button">
                Reject
            </Button>
            <Button fx:id="acceptButton" styleClass="action-button">
                Accept
            </Button>
        </HBox>
    </VBox>

</AnchorPane>
