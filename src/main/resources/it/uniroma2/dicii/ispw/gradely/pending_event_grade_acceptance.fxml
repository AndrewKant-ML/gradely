<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>
<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            prefHeight="56" prefWidth="200.0"
            fx:controller="it.uniroma2.dicii.ispw.gradely.use_cases.controllers_general.pending_event.graphic.PendingEventGradeAcceptanceGraphicController"
            stylesheets="@styles/default.css">

    <padding>
        <Insets topRightBottomLeft="6"/>
    </padding>
    <VBox AnchorPane.topAnchor="0" AnchorPane.leftAnchor="0"
          AnchorPane.rightAnchor="0" AnchorPane.bottomAnchor="0">
        <Text fx:id="text" wrappingWidth="140" styleClass="text-field"/>
        <HBox>
            <Button styleClass="second-action-button" onAction="#rejectGrade">
                Reject
            </Button>
            <Region HBox.hgrow="ALWAYS"/>
            <Button styleClass="action-button" onAction="#acceptGrade">
                Accept
            </Button>
        </HBox>
    </VBox>

</AnchorPane>
